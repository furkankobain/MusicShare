rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== CONVERSATIONS RULES =====
    match /conversations/{conversationId} {
      // Sadece konuşmaya dahil olan kullanıcılar okuyabilir
      allow read: if request.auth != null && 
                     request.auth.uid in resource.data.participantIds;
      
      // Yeni konuşma oluşturulurken, oluşturan kişi participantIds içinde olmalı
      allow create: if request.auth != null && 
                       request.auth.uid in request.resource.data.participantIds;
      
      // Sadece participantlar güncelleyebilir (typing status, unread count vs.)
      allow update: if request.auth != null && 
                       request.auth.uid in resource.data.participantIds;
      
      // Silme izni yok (güvenlik için)
      allow delete: if false;
    }
    
    // ===== MESSAGES RULES =====
    match /messages/{messageId} {
      // Giriş yapmış herkes okuyabilir (ama query'de conversationId kontrolü olacak)
      allow read: if request.auth != null;
      
      // Sadece kendi gönderdiği mesajları oluşturabilir
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.senderId;
      
      // Okundu bilgisi güncellenebilir
      allow update: if request.auth != null;
      
      // Sadece kendi mesajını silebilir
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.senderId;
    }
    
    // ===== PLAYLISTS RULES =====
    match /playlists/{playlistId} {
      allow read: if resource.data.isPublic == true || 
                     request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && 
                      request.auth.uid == resource.data.userId;
    }
    
    // ===== USERS RULES =====
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
